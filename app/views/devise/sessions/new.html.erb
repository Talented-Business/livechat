<div class="loginform">
  <div class="loginerror"><p>Invalid username or password</p></div>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <p><%= f.label :email, :class=>"bebas" %>
    <%= f.email_field :email, :autofocus => true %></p>

    <p><%= f.label :password, :class=>"bebas" %>
    <%= f.password_field :password %></p>

    <% unless devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
    <% end -%>

    <p>
      <button type="submit" class="radius3 bebas">Sign in</button>
    </p>
  <% end %>
  <%= render "devise/shared/links" %>
</div><!--loginform-->
  